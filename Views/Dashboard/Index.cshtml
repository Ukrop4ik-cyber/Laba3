@model WebApplication2.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Адмін-панель";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h1 class="mb-4"><i class="fas fa-tachometer-alt"></i> Панель управління</h1>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card dashboard-card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-white-50">Всього замовлень</h6>
                            <div class="stat-number">@Model.TotalOrders</div>
                        </div>
                        <i class="fas fa-shopping-cart fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card dashboard-card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-white-50">Загальна виручка</h6>
                            <div class="stat-number">@Model.TotalRevenue.ToString("N0") ₴</div>
                        </div>
                        <i class="fas fa-dollar-sign fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card dashboard-card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-white-50">Виручка за місяць</h6>
                            <div class="stat-number">@Model.MonthRevenue.ToString("N0") ₴</div>
                        </div>
                        <i class="fas fa-calendar-alt fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card dashboard-card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-white-50">Користувачів</h6>
                            <div class="stat-number">@Model.TotalUsers</div>
                        </div>
                        <i class="fas fa-users fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Recent Orders -->
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-list"></i> Останні замовлення</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>№ Замовлення</th>
                                    <th>Клієнт</th>
                                    <th>Сума</th>
                                    <th>Статус</th>
                                    <th>Дата</th>
                                    <th>Дії</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.RecentOrders)
                                {
                                    <tr>
                                        <td><strong>@order.OrderNumber</strong></td>
                                        <td>@order.CustomerName</td>
                                        <td>@order.TotalAmount.ToString("N0") ₴</td>
                                        <td>
                                            @switch (order.Status)
                                            {
                                                case WebApplication2.Models.OrderStatus.New:
                                                    <span class="status-badge status-new">Нове</span>
                                                    break;
                                                case WebApplication2.Models.OrderStatus.Processing:
                                                    <span class="status-badge status-processing">В обробці</span>
                                                    break;
                                                case WebApplication2.Models.OrderStatus.Shipped:
                                                    <span class="status-badge status-shipped">Відправлено</span>
                                                    break;
                                                case WebApplication2.Models.OrderStatus.Delivered:
                                                    <span class="status-badge status-delivered">Доставлено</span>
                                                    break;
                                                case WebApplication2.Models.OrderStatus.Cancelled:
                                                    <span class="status-badge status-cancelled">Скасовано</span>
                                                    break;
                                            }
                                        </td>
                                        <td>@order.CreatedAt.ToString("dd.MM.yyyy")</td>
                                        <td>
                                            <a asp-controller="Orders" asp-action="Details" asp-route-id="@order.Id" 
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer bg-white">
                    <a asp-controller="Orders" asp-action="Index" class="btn btn-primary btn-sm">
                        Переглянути всі замовлення <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Top Products -->
        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-star"></i> Топ товари</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        @foreach (var product in Model.TopProducts)
                        {
                            <div class="list-group-item px-0">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">@product.ProductName</h6>
                                        <small class="text-muted">
                                            Продано: @product.QuantitySold шт.
                                        </small>
                                    </div>
                                    <span class="badge bg-success rounded-pill">
                                        @product.Revenue.ToString("N0") ₴
                                    </span>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="card-footer bg-white">
                    <a asp-controller="Dashboard" asp-action="Statistics" class="btn btn-primary btn-sm">
                        Детальна статистика <i class="fas fa-chart-line"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row g-4 mt-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-bolt"></i> Швидкі дії</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        @if (User.IsInRole("Admin"))
                        {
                            <div class="col-md-3">
                                <a asp-controller="Products" asp-action="Create" class="btn btn-lg btn-primary w-100">
                                    <i class="fas fa-plus-circle fa-2x d-block mb-2"></i>
                                    Додати товар
                                </a>
                            </div>
                            <div class="col-md-3">
                                <a asp-controller="Products" asp-action="Index" class="btn btn-lg btn-info w-100">
                                    <i class="fas fa-boxes fa-2x d-block mb-2"></i>
                                    Управління товарами
                                </a>
                            </div>
                        }
                        <div class="col-md-3">
                            <a asp-controller="Orders" asp-action="Index" class="btn btn-lg btn-success w-100">
                                <i class="fas fa-shopping-cart fa-2x d-block mb-2"></i>
                                Замовлення
                            </a>
                        </div>
                        @if (User.IsInRole("Admin"))
                        {
                            <div class="col-md-3">
                                <a asp-controller="Users" asp-action="Index" class="btn btn-lg btn-warning w-100">
                                    <i class="fas fa-users fa-2x d-block mb-2"></i>
                                    Користувачі
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh every 5 minutes
        setTimeout(function() {
            location.reload();
        }, 300000);
    </script>
}