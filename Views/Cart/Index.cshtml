@model WebApplication2.ViewModels.CartViewModel
@{
    ViewData["Title"] = "Кошик";
}

<div class="container my-5">
    <h1 class="mb-4"><i class="fas fa-shopping-cart"></i> Кошик</h1>

    @if (Model.Items.Any())
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        @foreach (var item in Model.Items)
                        {
                            <div class="cart-item">
                                <div class="row align-items-center">
                                    <div class="col-md-2">
                                        <img src="@(item.ProductImage ?? "/images/no-image.jpg")" 
                                             class="img-fluid rounded" 
                                             alt="@item.ProductName">
                                    </div>
                                    <div class="col-md-4">
                                        <h5 class="mb-1">@item.ProductName</h5>
                                        <p class="text-muted mb-0">@item.Price.ToString("N0") грн</p>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="input-group">
                                            <button class="btn btn-outline-secondary" type="button" 
                                                    onclick="updateQuantity(@item.CartItemId, @(item.Quantity - 1))">
                                                <i class="fas fa-minus"></i>
                                            </button>
                                            <input type="number" class="form-control text-center cart-quantity" 
                                                   value="@item.Quantity" 
                                                   min="1" 
                                                   data-cart-item-id="@item.CartItemId"
                                                   readonly>
                                            <button class="btn btn-outline-secondary" type="button"
                                                    onclick="updateQuantity(@item.CartItemId, @(item.Quantity + 1))">
                                                <i class="fas fa-plus"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <h5 class="text-primary mb-0">@item.Total.ToString("N0") грн</h5>
                                    </div>
                                    <div class="col-md-1 text-end">
                                        <button class="btn btn-sm btn-outline-danger remove-from-cart" 
                                                data-cart-item-id="@item.CartItemId">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left"></i> Продовжити покупки
                </a>
            </div>

            <div class="col-lg-4">
                <div class="cart-summary">
                    <h4 class="mb-4">Підсумок замовлення</h4>
                    
                    <div class="d-flex justify-content-between mb-2">
                        <span>Товарів:</span>
                        <span>@Model.Items.Count()</span>
                    </div>
                    
                    <div class="d-flex justify-content-between mb-2">
                        <span>Вартість товарів:</span>
                        <span>@Model.TotalAmount.ToString("N0") грн</span>
                    </div>
                    
                    <div class="d-flex justify-content-between mb-3">
                        <span>Доставка:</span>
                        <span>
                            @if (Model.DeliveryPrice == 0)
                            {
                                <span class="text-success">Безкоштовно</span>
                            }
                            else
                            {
                                @Model.DeliveryPrice.ToString("N0") <text>грн</text>
                            }
                        </span>
                    </div>
                    
                    <hr>
                    
                    <div class="d-flex justify-content-between mb-4">
                        <h5>Всього:</h5>
                        <h5 class="text-primary">@Model.GrandTotal.ToString("N0") грн</h5>
                    </div>
                    
                    @if (Model.TotalAmount < 5000)
                    {
                        <div class="alert alert-info">
                            <small>
                                <i class="fas fa-truck"></i> 
                                Замовте ще на @((5000 - Model.TotalAmount).ToString("N0")) грн для безкоштовної доставки!
                            </small>
                        </div>
                    }
                    
                    <div class="d-grid">
                        <a asp-controller="Order" asp-action="Checkout" class="btn btn-primary btn-lg">
                            <i class="fas fa-shopping-bag"></i> Оформити замовлення
                        </a>
                    </div>
                    
                    <div class="mt-3">
                        <button class="btn btn-outline-danger btn-sm w-100" onclick="clearCart()">
                            <i class="fas fa-trash"></i> Очистити кошик
                        </button>
                    </div>
                </div>

                <!-- Payment Methods -->
                <div class="card mt-3">
                    <div class="card-body">
                        <h6 class="card-title"><i class="fas fa-credit-card"></i> Способи оплати:</h6>
                        <div class="d-flex gap-2 flex-wrap">
                            <i class="fab fa-cc-visa fa-2x text-primary"></i>
                            <i class="fab fa-cc-mastercard fa-2x text-warning"></i>
                            <i class="fas fa-money-bill-wave fa-2x text-success"></i>
                        </div>
                    </div>
                </div>

                <!-- Delivery Info -->
                <div class="card mt-3 bg-light">
                    <div class="card-body">
                        <h6 class="card-title"><i class="fas fa-truck"></i> Доставка:</h6>
                        <small>
                            • Самовивіз - безкоштовно<br>
                            • Кур'єр по місту - 150 грн<br>
                            • Нова Пошта - за тарифами перевізника<br>
                            • Безкоштовна доставка від 5000 грн
                        </small>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-shopping-cart fa-5x text-muted mb-4"></i>
            <h3>Ваш кошик порожній</h3>
            <p class="text-muted mb-4">Додайте товари до кошика, щоб продовжити</p>
            <a asp-controller="Product" asp-action="Index" class="btn btn-primary btn-lg">
                <i class="fas fa-shopping-bag"></i> Перейти до каталогу
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        function updateQuantity(cartItemId, newQuantity) {
            if (newQuantity < 1) {
                removeFromCart(cartItemId);
                return;
            }
            
            updateCartQuantity(cartItemId, newQuantity);
        }

        function clearCart() {
            if (confirm('Очистити кошик?')) {
                $.post('/Cart/ClearCart', function(response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        showToast(response.message || 'Помилка', 'danger');
                    }
                });
            }
        }
    </script>
}