@{
    ViewData["Title"] = "Головна";
    var featuredProducts = ViewBag.FeaturedProducts as IEnumerable<Product>;
    var categories = ViewBag.Categories as IEnumerable<Category>;
}

<!-- Hero Section -->
<section class="hero-section bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-3">Ласкаво просимо до TechShop!</h1>
                <p class="lead mb-4">Найкращі ціни на комп'ютерну техніку. Швидка доставка по всій Україні.</p>
                <a asp-controller="Product" asp-action="Index" class="btn btn-light btn-lg">
                    <i class="fas fa-shopping-bag"></i> Переглянути каталог
                </a>
            </div>
            <div class="col-lg-6 text-center">
                <i class="fas fa-laptop-code" style="font-size: 200px; opacity: 0.2;"></i>
            </div>
        </div>
    </div>
</section>

<!-- Categories Section -->
<section class="categories-section py-5">
    <div class="container">
        <h2 class="text-center mb-5">Категорії товарів</h2>
        <div class="row g-4">
            @if (categories != null)
            {
                foreach (var category in categories)
                {
                    <div class="col-md-4 col-lg-3">
                        <a asp-controller="Product" asp-action="Category" asp-route-id="@category.Id" 
                           class="text-decoration-none">
                            <div class="card h-100 shadow-sm hover-shadow">
                                <div class="card-body text-center">
                                    <i class="fas fa-laptop fa-3x text-primary mb-3"></i>
                                    <h5 class="card-title">@category.Name</h5>
                                    <p class="text-muted small">@category.Description</p>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            }
        </div>
    </div>
</section>

<!-- Featured Products Section -->
<section class="featured-products py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">Популярні товари</h2>
        <div class="row g-4">
            @if (featuredProducts != null)
            {
                foreach (var product in featuredProducts)
                {
                    <div class="col-md-6 col-lg-3">
                        <div class="card h-100 shadow-sm">
                            <img src="@(product.ImageUrl ?? "/images/no-image.jpg")" 
                                 class="card-img-top" 
                                 alt="@product.Name"
                                 style="height: 200px; object-fit: cover;">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="text-muted small flex-grow-1">@product.Brand</p>
                                
                                @if (product.AverageRating > 0)
                                {
                                    <div class="mb-2">
                                        @for (int i = 0; i < 5; i++)
                                        {
                                            if (i < (int)product.AverageRating)
                                            {
                                                <i class="fas fa-star text-warning"></i>
                                            }
                                            else
                                            {
                                                <i class="far fa-star text-warning"></i>
                                            }
                                        }
                                        <small class="text-muted">(@product.ReviewCount)</small>
                                    </div>
                                }
                                
                                <h4 class="text-primary mb-3">@product.Price.ToString("N0") грн</h4>
                                
                                <div class="d-grid gap-2">
                                    <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" 
                                       class="btn btn-outline-primary btn-sm">
                                        Детальніше
                                    </a>
                                    @if (User.Identity?.IsAuthenticated == true)
                                    {
                                        <button class="btn btn-primary btn-sm add-to-cart" data-product-id="@product.Id">
                                            <i class="fas fa-cart-plus"></i> До кошика
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section py-5">
    <div class="container">
        <div class="row g-4 text-center">
            <div class="col-md-3">
                <i class="fas fa-shipping-fast fa-3x text-primary mb-3"></i>
                <h5>Швидка доставка</h5>
                <p class="text-muted">По всій Україні</p>
            </div>
            <div class="col-md-3">
                <i class="fas fa-shield-alt fa-3x text-primary mb-3"></i>
                <h5>Гарантія якості</h5>
                <p class="text-muted">На всі товари</p>
            </div>
            <div class="col-md-3">
                <i class="fas fa-headset fa-3x text-primary mb-3"></i>
                <h5>Підтримка 24/7</h5>
                <p class="text-muted">Завжди на зв'язку</p>
            </div>
            <div class="col-md-3">
                <i class="fas fa-credit-card fa-3x text-primary mb-3"></i>
                <h5>Безпечна оплата</h5>
                <p class="text-muted">Різні способи оплати</p>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $('.add-to-cart').click(function() {
            var productId = $(this).data('product-id');
            var btn = $(this);
            
            btn.prop('disabled', true);
            
            $.post('/Cart/AddToCart', { productId: productId }, function(response) {
                if (response.success) {
                    $('#cartCount').text(response.cartCount);
                    btn.html('<i class="fas fa-check"></i> Додано');
                    setTimeout(function() {
                        btn.html('<i class="fas fa-cart-plus"></i> До кошика');
                        btn.prop('disabled', false);
                    }, 2000);
                } else {
                    alert(response.message);
                    btn.prop('disabled', false);
                }
            });
        });
    </script>
}

<style>
    .hover-shadow {
        transition: all 0.3s;
    }
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15) !important;
    }
</style>