@model WebApplication2.Models.Order
@{
    ViewData["Title"] = $"Замовлення {Model.OrderNumber}";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-file-invoice"></i> Замовлення @Model.OrderNumber</h1>
        <div>
            <a asp-controller="Order" asp-action="DownloadReceipt" asp-route-id="@Model.Id" 
               class="btn btn-primary">
                <i class="fas fa-download"></i> Завантажити чек
            </a>
            <a asp-action="Orders" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Назад
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Інформація про замовлення</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Номер замовлення:</strong><br>
                            <span class="badge bg-primary fs-6">@Model.OrderNumber</span>
                        </div>
                        <div class="col-md-6">
                            <strong>Статус:</strong><br>
                            @switch (Model.Status)
                            {
                                case OrderStatus.New:
                                    <span class="status-badge status-new">Нове</span>
                                    break;
                                case OrderStatus.Processing:
                                    <span class="status-badge status-processing">В обробці</span>
                                    break;
                                case OrderStatus.Shipped:
                                    <span class="status-badge status-shipped">Відправлено</span>
                                    break;
                                case OrderStatus.Delivered:
                                    <span class="status-badge status-delivered">Доставлено</span>
                                    break;
                                case OrderStatus.Cancelled:
                                    <span class="status-badge status-cancelled">Скасовано</span>
                                    break;
                            }
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Дата створення:</strong><br>
                            @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                        </div>
                        <div class="col-md-6">
                            <strong>Загальна сума:</strong><br>
                            <h4 class="text-primary mb-0">@Model.TotalAmount.ToString("N0") грн</h4>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Доставка та оплата</h5>
                </div>
                <div class="card-body">
                    <p><strong>Спосіб доставки:</strong> @Model.DeliveryMethod</p>
                    <p><strong>Адреса доставки:</strong> @Model.DeliveryAddress</p>
                    <p><strong>Спосіб оплати:</strong> @Model.PaymentMethod</p>
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <p><strong>Коментар:</strong> @Model.Notes</p>
                    }
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-warning">
                    <h5 class="mb-0">Склад замовлення</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Товар</th>
                                    <th class="text-center">Кількість</th>
                                    <th class="text-end">Ціна</th>
                                    <th class="text-end">Сума</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderItems)
                                {
                                    <tr>
                                        <td>@item.ProductName</td>
                                        <td class="text-center">@item.Quantity</td>
                                        <td class="text-end">@item.Price.ToString("N0") грн</td>
                                        <td class="text-end">@item.TotalPrice.ToString("N0") грн</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                @{
                                    var subtotal = Model.TotalAmount - Model.DeliveryPrice;
                                }
                                <tr>
                                    <td colspan="3" class="text-end"><strong>Вартість товарів:</strong></td>
                                    <td class="text-end">@subtotal.ToString("N0") грн</td>
                                </tr>
                                <tr>
                                    <td colspan="3" class="text-end"><strong>Доставка:</strong></td>
                                    <td class="text-end">@Model.DeliveryPrice.ToString("N0") грн</td>
                                </tr>
                                <tr class="table-primary">
                                    <td colspan="3" class="text-end"><strong>ВСЬОГО:</strong></td>
                                    <td class="text-end"><strong>@Model.TotalAmount.ToString("N0") грн</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Контактна інформація</h5>
                </div>
                <div class="card-body">
                    <p><strong>ПІБ:</strong><br>@Model.CustomerName</p>
                    <p><strong>Телефон:</strong><br>
                        <a href="tel:@Model.CustomerPhone">@Model.CustomerPhone</a>
                    </p>
                    <p class="mb-0"><strong>Email:</strong><br>
                        <a href="mailto:@Model.CustomerEmail">@Model.CustomerEmail</a>
                    </p>
                </div>
            </div>

            <div class="card shadow-sm mt-3 bg-light">
                <div class="card-body">
                    <h6 class="card-title"><i class="fas fa-info-circle"></i> Інформація</h6>
                    <p class="small mb-0">
                        Якщо у вас виникли питання щодо замовлення, зв'яжіться з нашою службою підтримки:
                        <br><strong>+380 (38) 234-56-78</strong>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>