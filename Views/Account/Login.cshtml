@model WebApplication2.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Вхід";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-5 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="fas fa-sign-in-alt fa-3x text-primary mb-3"></i>
                        <h2 class="mb-0">Вхід</h2>
                        <p class="text-muted">Увійдіть у свій обліковий запис</p>
                    </div>

                    <form asp-action="Login" method="post">
                        <input type="hidden" asp-for="@ViewData["ReturnUrl"]" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                <input asp-for="Email" class="form-control" placeholder="example@mail.com" autofocus />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input asp-for="Password" class="form-control" placeholder="Введіть пароль" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <div class="form-check">
                                <input asp-for="RememberMe" class="form-check-input" />
                                <label asp-for="RememberMe" class="form-check-label"></label>
                            </div>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt"></i> Увійти
                            </button>
                        </div>

                        <div class="text-center">
                            <p class="mb-2">
                                <a href="#" class="text-decoration-none small">Забули пароль?</a>
                            </p>
                            <p class="mb-0">
                                Немає акаунта? 
                                <a asp-action="Register" class="text-decoration-none">Зареєструватися</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Test Accounts Info -->
            <div class="card mt-3 bg-light">
                <div class="card-body">
                    <h6 class="card-title"><i class="fas fa-info-circle"></i> Тестові акаунти:</h6>
                    <small>
                        <strong>Адміністратор:</strong><br>
                        Email: admin@techshop.ua<br>
                        Пароль: Admin123!
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}