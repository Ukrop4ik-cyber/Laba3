@using WebApplication2.Models
@model IEnumerable<WebApplication2.Models.Order>
@{
    ViewData["Title"] = "Мої замовлення";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-3">
            <div class="list-group shadow-sm">
                <a asp-action="Profile" class="list-group-item list-group-item-action">
                    <i class="fas fa-user"></i> Профіль
                </a>
                <a asp-action="Orders" class="list-group-item list-group-item-action active">
                    <i class="fas fa-shopping-bag"></i> Мої замовлення
                </a>
                <a asp-action="EditProfile" class="list-group-item list-group-item-action">
                    <i class="fas fa-edit"></i> Редагувати профіль
                </a>
            </div>
        </div>

        <div class="col-md-9">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-shopping-bag"></i> Історія замовлень</h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>№ Замовлення</th>
                                        <th>Дата</th>
                                        <th>Сума</th>
                                        <th>Статус</th>
                                        <th>Дії</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model)
                                    {
                                        <tr>
                                            <td><strong>@order.OrderNumber</strong></td>
                                            <td>@order.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                            <td>@order.TotalAmount.ToString("N0") грн</td>
                                            <td>
                                                @switch (order.Status)
                                                {
                                                    case OrderStatus.New:
                                                        <span class="status-badge status-new">Нове</span>
                                                        break;
                                                    case OrderStatus.Processing:
                                                        <span class="status-badge status-processing">В обробці</span>
                                                        break;
                                                    case OrderStatus.Shipped:
                                                        <span class="status-badge status-shipped">Відправлено</span>
                                                        break;
                                                    case OrderStatus.Delivered:
                                                        <span class="status-badge status-delivered">Доставлено</span>
                                                        break;
                                                    case OrderStatus.Cancelled:
                                                        <span class="status-badge status-cancelled">Скасовано</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <a asp-action="OrderDetails" asp-route-id="@order.Id" 
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i> Деталі
                                                </a>
                                                <a asp-controller="Order" asp-action="DownloadReceipt" 
                                                   asp-route-id="@order.Id" 
                                                   class="btn btn-sm btn-outline-secondary">
                                                    <i class="fas fa-download"></i> Чек
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-shopping-bag fa-5x text-muted mb-3"></i>
                            <h4>У вас ще немає замовлень</h4>
                            <p class="text-muted">Перегляньте наш каталог і зробіть своє перше замовлення</p>
                            <a asp-controller="Product" asp-action="Index" class="btn btn-primary">
                                <i class="fas fa-shopping-cart"></i> До каталогу
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>